{
  "name": "tts-voice",
  "version": "1.0.0",
  "description": "High-quality local TTS application with 5 female voice models",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --reload",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir"
  },
  "keywords": [
    "electron",
    "tts",
    "piper",
    "text-to-speech"
  ],
  "author": "ShashwatGold1",
  "license": "MIT",
  "build": {
    "appId": "com.shashwatgold1.ttsvoice",
    "productName": "TTS Voice",
    "copyright": "Copyright Â© 2025 ShashwatGold1",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "signExts": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TTS Voice",
      "deleteAppDataOnUninstall": true
    },
    "asar": true,
    "asarUnpack": [
      "models/**/*",
      "piper/**/*"
    ],
    "files": [
      "**/*",
      "!**/*.md",
      "!.claude/**/*",
      "!create_*.py",
      "!create_*.js",
      "!generate_*.js",
      "!convert_*.html",
      "!.git/**/*",
      "!.gitignore"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "."
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "soundtouchjs": "^0.2.1"
  }
}
